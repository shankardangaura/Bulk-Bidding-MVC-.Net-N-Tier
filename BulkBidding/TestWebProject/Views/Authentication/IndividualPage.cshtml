@model BRDataModels.Post
@{
    Layout = "~/Views/Shared/_LayoutV1.cshtml";
    var _name = ViewBag.UserName;
}
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    @_name
                </h2>
            </div>
        </div>
        <form asp-action="postCreate" method="post" class="card" id="signupCompany" autocomplete="off" novalidate>
            <div class="card-body">
                <h2 class="card-title text-center " style="color:#464cfa">New Post:</h2>

                    @Html.HiddenFor(x => x.Id)
                    <label class="form-label">Title</label>
                    <input asp-for="PostTitle" class="form-control" placeholder="Enter title" />
              
                    <label class="form-label">Description</label>
                    <input asp-for="PostDescription" class="form-control" placeholder="Enter title description" />
                    &nbsp;
                <div>
                    <button type="submit" class="btn btn-primary w-100">Post Status</button>
                </div>
            </div>
        </form>
    </div>
</div>

