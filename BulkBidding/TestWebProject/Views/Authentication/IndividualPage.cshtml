    <div class="container container-tight py">
        
    </div>
</div> *@
<div class="modal modal-blur fade" id="modal-team" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            
        </div>
    </div>
</div>

<div class="col-12">
    <div class="card">
        <div class="table-responsive" id="postData">
            
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $.ajax({
            type: 'get',
            url: '/Authentication/GetPostDetail',
            data: { "userId": 0 },
            success: function (response) {
                $("#postData").html(response);
            }

        });
        return false;
    });
</script>